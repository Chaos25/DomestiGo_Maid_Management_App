<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:background="@color/domesticgored"
    >

    <fragment
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_centerHorizontal="true"
        android:id="@+id/citytag"
        android:layout_margin="10dp"
        android:textColor="@color/projectwhite"
        android:textSize="25dp"
        android:fontFamily="@font/poppins"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/citytag"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/find_maids_nearby"
        android:id="@+id/button_find_maids"
        android:backgroundTint="@color/projectwhite"
        android:textColor="@color/domesticgored"
        />

</RelativeLayout>